{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dem2dsf build config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {"type": "string"},
    "output_dir": {"type": "string"},
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "dems": {
          "type": "array",
          "items": {"type": "string"}
        },
        "dem_stack": {"type": "string"},
        "tiles": {
          "type": "array",
          "items": {"type": "string"}
        },
        "aoi": {"type": "string"},
        "aoi_crs": {"type": "string"}
      }
    },
    "options": {
      "type": "object"
    },
    "tools": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "runner": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        },
        "dsftool": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        },
        "ddstool": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        }
      }
    }
  }
}
